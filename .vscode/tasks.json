{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build and Serve Hugo Site",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-NoProfile",
        "-Command",
        "$env:HUGO_CACHE_DIR=$null; Set-Location '${workspaceFolder}'; & '${workspaceFolder}\\Source_Pages\\build-and-serve.ps1'"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
